//- Include all mixins
include ../mixins/mixins

block vars
  - var pageTitle     = 'MySite';
  - var pageName      = 'home';
  - var bodyClass     = 'home';
  - var showSubscribe = false;

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    //[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1"><![endif]
    title=pageTitle
    meta(property="og:title", content=pageTitle)
    meta(property="og:description", content="Riot")
    meta(property="og:url", content=" ")
    meta(property="og:image", content=" ")
    meta(name="description", content="Riot")
    meta(name="keywords", content="")
    meta(name="viewport", content="width=device-width, initial-scale=1, minimal-ui, user-scalable=no")
    link(rel="icon", href="images/general/favicon-16x16.png", sizes="16x16")
    link(rel="icon", href="images/general/favicon-32x32.png", sizes="32x32")
    link(rel="icon", href="images/general/favicon-64x64.png", sizes="64x64")

    //- Additional styles
    block styles

    link(rel="stylesheet", href="css/styles.css")

    script.
      var appBaseUrl = 'http://localhost:8000/';
      var appImageBaseUrl = appBaseUrl + 'images/';
      var APP_API_BASE_URL = 'data/';

    //- Additional scripts
    block head_scripts

  body(class=bodyClass)
    .site
      .site--inner
        //-
        //- header
        //-

        //- Block before header
        block header_before

        include ../blocks/header

        //- Block after header
        block header_after

        //-
        //- Main content
        //-
        main.main
          block main

        include ../blocks/footer

        //- Block after footer
        block footer_after

      //- Additional sctips
      block footer_scripts

      script(src="js/scripts.js")
      script(src="js/custom.js")

      //- Additional sctips
      block last_scripts
